<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.app.littlechat">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.app.CreateGroup">
        </activity>

        <service android:name=".firebase.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity
                android:name=".ChatScreen"
                android:theme="@style/NoActionBar">
        </activity>
        <activity
                android:name=".FriendRequests"
                android:label="@string/friend_requests"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".FindFriends"
                android:label="@string/find_friends"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".Profile"
                android:label="@string/profile"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".HomeScreen"
                android:label="@string/home"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".Signup"
                android:label="@string/signup"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".Login"
                android:label="@string/login"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".MainActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
                android:screenOrientation="portrait"/>
    </application>

</manifest>